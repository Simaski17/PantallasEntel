<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:right="5dp"
                android:top="5dp">
                    <shape android:shape="rectangle">
                        <gradient android:angle="270"
                            android:endColor="#E2E2E2"
                            android:startColor="#BABABA" />
                        <corners android:bottomRightRadius="50dp"/>
                    </shape>
            </item>
            <item android:bottom="8dp" android:left="0dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/BlancoEntel"
                        android:startColor="@color/blanco" />
                    <stroke android:width="0dp" android:color="#BABABA" />
                    <corners android:bottomRightRadius="50dp" />
                    <padding android:bottom="10dp" android:left="0dp"
                        android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>