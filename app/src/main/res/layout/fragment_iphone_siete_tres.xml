            android:textSize="22.5sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/GrisOscuroEntel"
            android:layout_marginTop="1092dp"
            android:layout_marginLeft="107dp"/>



    </RelativeLayout>

    <ImageView
        android:layout_width="632dp"
        android:layout_height="305dp"
        android:background="@drawable/iphonesieteimgtres"
        android:layout_marginTop="523dp"
        android:layout_marginLeft="198dp"/>

</FrameLayout>
