<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="995dp"
    android:layout_height="1540dp"
    android:layout_marginTop="202dp"
    android:layout_marginLeft="26dp"
    tools:context="com.rinno.simaski.pantallasentel.HuaweiPNueveUnoFragment">

    <RelativeLayout
        android:layout_width="888dp"
        android:layout_marginLeft="71dp"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="515dp"
            android:layout_height="112dp"
            android:background="@drawable/iphonesieteplustitulodos"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="94dp"/>


        <TextView
            android:id="@+id/ivTituloTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textSize="22.5sp"
            android:textStyle="italic"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="456dp"
            android:layout_marginLeft="460dp"/>

        <TextView
            android:id="@+id/ivTituloMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 7 Plus_"
            android:textSize="55sp"
            android:textStyle="bold"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="476dp"
            android:layout_marginLeft="460dp"/>



        <TextView
            android:id="@+id/ivTituloGracias"
            android:layout_width="410dp"
            android:layout_height="250dp"
            android:text="El iPhone 7 tiene el chip más potente que haya existido en un smartphone. Por eso no sólo es más rápido que los modelos de iPhone anteriores, también es más eficiente. "
            android:textSize="22.5sp"
            android:lineSpacingExtra="13dp"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="460dp"/>



        <TextView
            android:id="@+id/ivTituloDospnuevo"
            android:layout_width="585dp"
            android:layout_height="98dp"
            android:text="La CPU del chip A10 Fusion tiene un nuevo diseño de cuatro núcleos: dos de alto rendimiento y dos de alta eficiencia."
            android:gravity="center"
            android:textSize="22sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/GrisTextoOscuro"
            android:layout_marginTop="1095dp"
            android:layout_marginLeft="150dp"/>



    </RelativeLayout>

    <ImageView
        android:layout_width="384dp"
        android:layout_height="533dp"
        android:background="@drawable/iphonesieteplusimgdos"
        android:layout_marginTop="402dp"
        android:layout_marginLeft="104dp"/>

</FrameLayout>
