<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="995dp"
    android:layout_height="1540dp"
    android:layout_marginTop="202dp"
    android:layout_marginLeft="26dp"
    tools:context="com.rinno.simaski.pantallasentel.HuaweiPNueveUnoFragment">

    <RelativeLayout
        android:layout_width="888dp"
        android:layout_marginLeft="97dp"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="617dp"
            android:layout_height="116dp"
            android:background="@drawable/iphonecuatroseimgtitulodos"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="90dp"/>


        <TextView
            android:id="@+id/ivTituloTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textSize="22.5sp"
            android:textStyle="italic"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="455dp"
            android:layout_marginLeft="436dp"/>

        <TextView
            android:id="@+id/ivTituloMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone SE_"
            android:textSize="55sp"
            android:textStyle="bold"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="476dp"
            android:layout_marginLeft="436dp"/>



        <TextView
            android:id="@+id/ivTituloGracias"
            android:layout_width="405dp"
            android:layout_height="158dp"
            android:text="Para crearlo, partimos de un diseño que es todo un éxito y lo reinventamos de arriba abajo. El avanzado chip A9 es el mismo que lleva el iPhone 6s."
            android:textSize="22.5sp"
            android:lineSpacingExtra="13dp"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="558dp"
            android:layout_marginLeft="436dp"/>



        <TextView
            android:id="@+id/ivTituloDospnuevo"
            android:layout_width="585dp"
            android:layout_height="98dp"
            android:text="Y con Live Photos, tus recuerdos están más vivos que nunca. El resultado es un iPhone que parece pequeño, pero está a la altura de los grandes."
            android:gravity="center"
            android:textSize="22sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/GrisTextoOscuro"
            android:layout_marginTop="1093dp"
            android:layout_marginLeft="147dp"/>



    </RelativeLayout>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="635dp"
        android:background="@drawable/iphonecuatroseimgdosa"
        android:layout_marginTop="427dp"
        android:layout_marginLeft="67dp"/>

    <ImageView
        android:layout_width="257dp"
        android:layout_height="645dp"
        android:background="@drawable/iphonecuatroseimgdos"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="218dp"/>

</FrameLayout>
