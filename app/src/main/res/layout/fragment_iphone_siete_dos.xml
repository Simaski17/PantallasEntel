<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="995dp"
    android:layout_height="1540dp"
    android:layout_marginTop="202dp"
    android:layout_marginLeft="26dp"
    tools:context="com.rinno.simaski.pantallasentel.HuaweiPNueveUnoFragment">

    <RelativeLayout
        android:layout_width="888dp"
        android:layout_marginLeft="97dp"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="508dp"
            android:layout_height="112dp"
            android:background="@drawable/iphonesietetitulodos"
            android:layout_marginLeft="186dp"
            android:layout_marginTop="94dp"/>


        <TextView
            android:id="@+id/ivTituloTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLE"
            android:textSize="22.5sp"
            android:textStyle="italic"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="456dp"
            android:layout_marginLeft="415dp"/>

        <TextView
            android:id="@+id/ivTituloMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 7_"
            android:textSize="55sp"
            android:textStyle="bold"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="476dp"
            android:layout_marginLeft="415dp"/>



        <TextView
            android:id="@+id/ivTituloGracias"
            android:layout_width="410dp"
            android:layout_height="250dp"
            android:text="La pantalla Retina HD tiene una nueva y amplia gama de colores. Una característica que le permite ofrecer colores de calidad cinematográfica y la mejor gestión de color en la industria del smartphone."
            android:textSize="22.5sp"
            android:lineSpacingExtra="13dp"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="568dp"
            android:layout_marginLeft="420dp"/>



        <TextView
            android:id="@+id/ivTituloDospnuevo"
            android:layout_width="585dp"
            android:layout_height="98dp"
            android:text="Todo se ve brillante y con una definición increíble. En pocas palabras, una pantalla que brilla con luz propia."
            android:gravity="center"
            android:textSize="22sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/GrisTextoOscuro"
            android:layout_marginTop="1100dp"
            android:layout_marginLeft="150dp"/>



    </RelativeLayout>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="669dp"
        android:background="@drawable/iphonesieteimgdos"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="76dp"/>

</FrameLayout>
