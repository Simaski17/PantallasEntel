<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="995dp"
    android:layout_height="1540dp"
    android:layout_marginTop="202dp"
    android:layout_marginLeft="26dp"
    tools:context="com.rinno.simaski.pantallasentel.HuaweiPNueveUnoFragment">

    <RelativeLayout
        android:layout_width="888dp"
        android:layout_marginLeft="71dp"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="475dp"
            android:layout_height="115dp"
            android:background="@drawable/titulo2pnueve"
            android:layout_marginLeft="224dp"
            android:layout_marginTop="95dp"/>


        <TextView
            android:id="@+id/ivTituloTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUAWEI"
            android:textSize="22.5sp"
            android:textStyle="italic|bold"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="455dp"
            android:layout_marginLeft="385dp"/>

        <TextView
            android:id="@+id/ivTituloMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P9_"
            android:textSize="55sp"
            android:textStyle="bold"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="476dp"
            android:layout_marginLeft="387dp"/>



        <TextView
            android:id="@+id/ivTituloGracias"
            android:layout_width="445dp"
            android:layout_height="158dp"
            android:text="@string/texto_gracias"
            android:textSize="22.5sp"
            android:lineSpacingExtra="13dp"
            android:textColor="@color/BlancoEntel"
            android:layout_marginTop="558dp"
            android:layout_marginLeft="385dp"/>



        <TextView
            android:id="@+id/ivTituloDospnuevo"
            android:layout_width="565dp"
            android:layout_height="98dp"
            android:text="Huawei P9 captura los deslumbrantes colores, la impactante precision del blanco y negro, el atractivo emocional de Leica"
            android:gravity="center"
            android:textSize="22.5sp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/GrisTextoOscuro"
            android:layout_marginTop="1093dp"
            android:layout_marginLeft="170dp"/>



    </RelativeLayout>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="742dp"
        android:background="@drawable/pnuevedos"
        android:layout_marginTop="330dp"/>

</FrameLayout>